                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="@string/work_tenure_tieto"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

